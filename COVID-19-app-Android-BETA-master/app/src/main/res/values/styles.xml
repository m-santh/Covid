<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:windowBackground">@color/color_nhsuk_grey_5</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="titleTextColor">@color/white</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
        </item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/color_nhsuk_grey_4</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTextView" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="PrimaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="TextViewError" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDanger</item>
    </style>

    <style name="TextViewStatus" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetTitle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextViewSubStatus" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewLink02" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewSubHead" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCardSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_sub_title</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextViewActionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextViewActionTitle02" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextViewActionSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_sub_title</item>
    </style>


    <style name="TextViewStatusSubTittle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1.18</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_sub_title</item>
    </style>

    <style name="OnboardingTitle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_round_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_round_background_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>


    <style name="PersistentBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
