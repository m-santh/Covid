<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:paddingHorizontal="16dp"
    tools:parentTag="LinearLayout">

    <TextView
        style="@style/TextViewStatusSubTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/status_description_02" />

    <TextView
        style="@style/TextViewStatusSubTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="@string/status_description_03" />

    <TextView
        android:id="@+id/need_medical_advice"
        style="@style/TextViewActionSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:accessibilityHeading="true"
        android:text="@string/need_medical_advice"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nhs_service"
        style="@style/TextViewLink02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/nhs_online_service" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/medical_workers_card"
        style="@style/PrimaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:accessibilityHeading="true"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:id="@+id/medicalWorkersInstructions"
            style="@style/TextViewActionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_24dp"
            android:text="@string/important_instructions_for_medical_workers" />

    </com.google.android.material.card.MaterialCardView>
</merge>
